generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       String   @default("patient") // patient | doctor
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  reports    Report[]
  chatMessages ChatMessage[]
  appointments Appointment[]
}

model Report {
  id            String   @id @default(cuid())
  userId        String
  filename      String
  filepath      String
  filetype      String
  filesize      Int
  uploadedAt    DateTime @default(now())
  status        String   @default("uploaded") // uploaded|processing|done|error
  extractedText String?

  parsedData    Json?
  flags         Json?    // list of abnormalities detected
  user          User     @relation(fields: [userId], references: [id])
}

model ChatMessage {
  id         String   @id @default(cuid())
  userId     String
  role       String   // user | assistant | system
  message    String

  context    Json?
  createdAt  DateTime @default(now())
  user       User     @relation(fields:[userId], references:[id])
}

model Doctor {
  id             String   @id @default(cuid())
  name           String
  specialization String
  experience     Int      // Years of experience
  fees           Float
  location       String
  image          String?  // URL to doctor's image
  rating         Float    @default(0.0)
  about          String?
  available      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  appointments   Appointment[]
}

model Appointment {
  id        String   @id @default(cuid())
  userId    String
  doctorId  String
  date      DateTime
  time      String   // e.g., "10:00 AM"
  status    String   @default("booked") // booked, completed, cancelled
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
}